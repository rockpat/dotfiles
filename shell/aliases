#-----------------------------------------------------------------------------------------------------
# 						Shell Aliases
#-----------------------------------------------------------------------------------------------------

alias \
	tree='tree -C' \
	grep='grep --color' \
	dir='dir --color' \
	cp="cp -iv" \
	mv="mv -iv" \
	bat='batcat' \
	wget='wget --hsts-file="$XDG_CACHE_HOME/wget-hsts"'

# LS ALIAS (with Fallback)
if which eza &> /dev/null; then
alias \
	ls='eza -@'\
	la='ls -A' \
	ll='ls -lA'
elif which ls &> /dev/null; then
alias \
	ls='ls --color -F' \
	ll='ls -lhA' \
	la='ls -A' 
fi
